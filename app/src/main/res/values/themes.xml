<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Garagely" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MaterialComponents" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
        <item name="navigationRailStyle">@style/Widget.App.NavigationRailView</item>
    </style>

    <style name="Widget.App.NavigationRailView" parent="Widget.Material3.NavigationRailView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.NavigationRailView</item>
    </style>

    <style name="ThemeOverlay.App.NavigationRailView" parent="">
        <item name="colorSecondaryContainer">@color/colorOrange</item>
        <item name="colorPrimary">@color/light_orange</item>
        <item name="indicatorColor">@color/colorOrange</item>
        <item name="itemTextAppearanceActive">?attr/textAppearanceLabelMedium</item>
        <item name="itemTextAppearanceInactive">?attr/textAppearanceBodySmall</item>
        <item name="itemTextColor">@color/item_color</item>
        <item name="itemIconTint">@color/nivation_rail_color</item>
        <item name="fontFamily">@font/poppins_regular</item>

    </style>

    <style name="Navigation_rail" parent="Widget.Material3.NavigationRailView.ActiveIndicator">
        <item name="color">@color/nivation_rail_color</item>
    </style>

    <!--    TextView Style-->
    <style name="TextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewStyle.Bold" parent="TextViewStyle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_light_black_text</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColorHint">@color/colorHintText</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="DialogThemeCustom" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_light_black_text</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="ButtonStyle.Bold" parent="ButtonStyle">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PinButtonTextStyle" parent="ButtonStyle.Bold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:background">@drawable/selector_fed</item>
    </style>

    <!--    EditText Style-->

    <!--    TextInputLayout-->
    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">14sp</item>
        <item name="errorTextAppearance">@color/color_red</item>
        <item name="prefixTextAppearance">@style/TextInputEditText.Text.Appearance</item>
        <item name="hintTextColor">@color/colorDefault</item>
        <item name="boxStrokeColor">@color/waiterTitle</item>
        <item name="android:textColorHint">@color/colorDefault</item>
        <item name="placeholderTextColor">@color/colorDefault</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextInputLayout.Outline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">12sp</item>
        <item name="errorTextAppearance">@style/TextInputEditText.Error.Text.Appearance</item>
        <item name="prefixTextAppearance">@style/TextInputEditText.Text.Appearance</item>
        <item name="android:textColorHint">@color/colorDefault</item>
        <item name="hintTextColor">@color/colorDefault</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="boxStrokeColor">@color/waiterTitle</item>
        <item name="placeholderTextColor">@color/colorDefault</item>
        <item name="android:layout_height">48dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="endIconTint">@null</item>
        <item name="endIconMode">custom</item>
    </style>

    <!--    TextInputEditText-->
    <style name="TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">text</item>
        <item name="android:textSize">1sp</item>
        <item name="android:colorControlActivated">@color/colorDefault</item>
        <item name="android:colorActivatedHighlight">@color/colorDefault</item>
        <item name="android:colorControlNormal">@color/colorDefault</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/color_light_black_text</item>
        <item name="android:textCursorDrawable">@drawable/cour</item>
        <item name="errorTextAppearance">@style/TextInputEditText.Error.Text.Appearance</item>
    </style>

    <style name="TextInputEditText.Text.Appearance" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_light_black_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputEditText.Error.Text.Appearance" parent="TextAppearance.Design.Error">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/color_red</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.Garagely" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

</resources>