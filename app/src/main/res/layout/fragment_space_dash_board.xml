<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.reparingManagement.dashboard.SpaceDashBoardFragment">

        <TextView
            android:id="@+id/tv_new_client"
            style="@style/TextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_add"
            android:drawablePadding="24dp"
            android:paddingVertical="16dp"
            android:paddingStart="24dp"
            android:text="Add Client"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_divider_view"
            app:layout_constraintTop_toBottomOf="@id/tv_new_client" />

        <LinearLayout
            android:id="@+id/layout_order_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            app:layout_constraintTop_toBottomOf="@id/view_line">

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingVertical="8dp"
                android:paddingStart="24dp"
                android:text="Car" />

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingVertical="8dp"
                android:paddingStart="24dp"
                android:text="Qty" />

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingVertical="8dp"
                android:paddingStart="24dp"
                android:text="Price" />

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingVertical="8dp"
                android:paddingStart="24dp"
                android:text="Total" />


        </LinearLayout>
        <View
            android:id="@+id/view_line_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_divider_view"
            app:layout_constraintTop_toBottomOf="@id/layout_order_header" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
