<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.reparingManagement.dashboard.SpaceDashBoardFragment">

        <View
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorOrange"
            app:layout_constraintBottom_toBottomOf="@id/textViewTitle"
            app:layout_constraintTop_toTopOf="@+id/textViewTitle" />

        <TextView
            android:id="@+id/textViewTitle"
            style="@style/TextViewStyle.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:text="@string/operating"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_divider_view"
            app:layout_constraintEnd_toEndOf="parent" />

        <RadioGroup
            android:id="@+id/radioView"
            style="@style/ButtonStyle"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/backgroud_radio_button"
            android:clipChildren="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_title">

            <RadioButton
                android:id="@+id/operatingCheck"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/selected_background_radio_item"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/operating"
                android:textColor="@color/radio_buttom_selected_item_text_color" />


            <RadioButton
                android:id="@+id/bookingCheck"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/selected_background_radio_item"
                android:button="@null"
                android:gravity="center"
                android:text="@string/booking"
                android:textColor="@color/radio_buttom_selected_item_text_color" />

        </RadioGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/operating_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioView" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
