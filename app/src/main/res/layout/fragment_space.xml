<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.reparingManagement.space.SpaceFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_products"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toTopOf="@id/spaceRecycleView"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_space"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/color_light_black_text"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/spaceRecycleView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/lightBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_space" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
