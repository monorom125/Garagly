<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/waiterTitle"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="5"
        tools:context="com.gis.smart_dinning.ui.saleScreen.payment.details.PaymentPayFragment">

        <LinearLayout
            android:id="@+id/layoutNumpad"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:background="@drawable/background_search_6dp"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                style="@style/TextViewStyle.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/amount"
                android:textAllCaps="true"
                android:textSize="@dimen/large_text_size" />

            <TextView
                android:id="@+id/textViewAmount"
                style="@style/TextViewStyle.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_white_stroke_waiter_title_6dp"
                android:gravity="center_vertical|end"
                android:padding="16dp"
                android:text="@string/_0"
                android:textSize="@dimen/super_extreme_large_text_size" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                app:columnCount="5"
                app:rowCount="6"
                tools:ignore="HardcodedText">

                <Button
                    android:id="@+id/button1"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_white_stroke_waiter_title_6dp"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="@dimen/super_extreme_large_text_size"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="1"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/button4"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_white_stroke_waiter_title_6dp"
                    android:gravity="center"
                    android:text="4"
                    android:textSize="@dimen/super_extreme_large_text_size"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="2"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/button7"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_white_stroke_waiter_title_6dp"
                    android:gravity="center"
                    android:text="7"
                    android:textSize="@dimen/super_extreme_large_text_size"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="3"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/buttonDot"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_white_stroke_waiter_title_6dp"
                    android:gravity="center"
                    android:text="."
                    android:textSize="@dimen/super_extreme_large_text_size"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="4"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/buttonDue"
                    style="@style/ButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_search_6dp"
                    android:gravity="center"
                    android:backgroundTint="@color/colorOrange"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large_text_size"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="5"
                    app:layout_rowWeight="1"
                    tools:text="Due\n45.75" />

                <Button
                    android:id="@+id/button2"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_white_stroke_waiter_title_6dp"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="@dimen/super_extreme_large_text_size"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="1"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/button5"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_white_stroke_waiter_title_6dp"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="@dimen/super_extreme_large_text_size"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="2"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/button8"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_white_stroke_waiter_title_6dp"
                    android:gravity="center"
                    android:text="8"
                    android:textSize="@dimen/super_extreme_large_text_size"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="3"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/button0"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_white_stroke_waiter_title_6dp"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="@dimen/super_extreme_large_text_size"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="4"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/buttonHalf"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_search_6dp"
                    android:gravity="center"
                    android:backgroundTint="@color/colorOrange"
                    android:textColor="@color/white"
                    android:textSize="@dimen/super_extreme_large_text_size"
                    android:text="60"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="5"
                    app:layout_rowWeight="1"
                    tools:text="1/2\n22.88" />

                <Button
                    android:id="@+id/button3"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_white_stroke_waiter_title_6dp"
                    android:gravity="center"
                    android:text="3"
                    android:textSize="@dimen/super_extreme_large_text_size"
                    app:layout_column="3"
                    app:layout_columnWeight="1"
                    app:layout_row="1"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/button6"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_white_stroke_waiter_title_6dp"
                    android:gravity="center"
                    android:text="6"
                    android:textSize="@dimen/super_extreme_large_text_size"
                    app:layout_column="3"
                    app:layout_columnWeight="1"
                    app:layout_row="2"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/button9"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_white_stroke_waiter_title_6dp"
                    android:gravity="center"
                    android:text="9"
                    android:textSize="@dimen/super_extreme_large_text_size"
                    app:layout_column="3"
                    app:layout_columnWeight="1"
                    app:layout_row="3"
                    app:layout_rowWeight="1" />

                <ImageButton
                    android:id="@+id/buttonDelete"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_white_stroke_waiter_title_6dp"
                    android:gravity="center"
                    android:src="@drawable/ic_remove_ui"
                    android:textSize="@dimen/super_extreme_large_text_size"
                    app:layout_column="3"
                    app:layout_columnWeight="1"
                    app:layout_row="4"
                    app:layout_rowWeight="1"
                    app:tint="@color/black"
                    tools:ignore="ContentDescription" />

                <Button
                    android:id="@+id/buttonThreeQuarter"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_search_6dp"
                    android:gravity="center"
                    android:backgroundTint="@color/colorOrange"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/super_extreme_large_text_size"
                    android:text="80"
                    app:layout_column="3"
                    app:layout_columnWeight="1"
                    app:layout_row="5"
                    app:layout_rowWeight="1"
                    tools:text="1/3\n15.25" />

                <Button
                    android:id="@+id/buttonClear"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_search_6dp"
                    android:gravity="center"
                    android:text="C"
                    android:backgroundTint="@color/lightBlack"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ultra_extreme_large_text_size"
                    app:layout_column="4"
                    app:layout_columnWeight="1"
                    app:layout_row="1"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/button10"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_search_6dp"
                    android:gravity="center"
                    android:text="10"
                    android:backgroundTint="@color/colorOrange"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/super_extreme_large_text_size"
                    app:layout_column="4"
                    app:layout_columnWeight="1"
                    app:layout_row="2"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/button20"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_search_6dp"
                    android:gravity="center"
                    android:backgroundTint="@color/colorOrange"
                    android:text="20"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/super_extreme_large_text_size"
                    app:layout_column="4"
                    app:layout_columnWeight="1"
                    app:layout_row="3"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/button50"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_search_6dp"
                    android:backgroundTint="@color/colorOrange"
                    android:gravity="center"
                    android:text="50"
                    android:textColor="@color/colorLightWhite"
                    android:textSize="@dimen/super_extreme_large_text_size"
                    app:layout_column="4"
                    app:layout_columnWeight="1"
                    app:layout_row="4"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/buttonQuarter"
                    style="@style/ButtonStyle.Bold"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/background_search_6dp"
                    android:gravity="center"
                    android:backgroundTint="@color/colorOrange"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/super_extreme_large_text_size"
                    android:text="80"
                    app:layout_column="4"
                    app:layout_columnWeight="1"
                    app:layout_row="5"
                    app:layout_rowWeight="1"
                    tools:text="1/4\n11.44" />

            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1.5"
            android:background="@drawable/background_search_6dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:weightSum="8">

            <TextView
                style="@style/TextViewStyle.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/pay_vai"
                android:textAllCaps="true"
                android:textSize="@dimen/large_text_size" />


            <TextView
                android:id="@+id/tv_cash"
                style="@style/TextViewStyle.Bold"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="@dimen/dimen_8"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_dashboard_grid_stroke_waiter_title_6dp"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:textSize="@dimen/large_text_size"
                android:text="Cash" />


        </LinearLayout>

    </LinearLayout>

</layout>